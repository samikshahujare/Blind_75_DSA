class Solution:
    # Function to find the maximum profit from one buy and one sell
    def maxProfit(self, prices):
        # Initialize minimum price to a very large number
        min_price = float('inf')

        # Initialize max profit to 0
        max_profit = 0

        # Traverse through each day's price
        for price in prices:
            # If current price is less than the minimum seen so far, update min_price
            if price < min_price:
                min_price = price

            # Calculate profit if stock is sold today
            profit = price - min_price

            # Update max_profit if the profit today is better than before
            if profit > max_profit:
                max_profit = profit

        # Return the best profit found
        return max_profit

